<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="android:listPreferredItemPaddingStart">8dp</item>
        <item name="android:listPreferredItemPaddingEnd">8dp</item>
    </style>

    <style name="FadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>
